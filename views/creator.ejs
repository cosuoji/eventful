<%- include('partials/header') -%>

    <div>
        <h1 class="block text-md font-medium leading-10 text-gray-900">
            Event Creator Page
        </h1>

        <h3 class="block text-md font-medium leading-10 text-gray-900">List of Events created by <%= username %></h3>
        <div>
            <ul>
                <% for (let i=0; i < listOfEvents.length ; i++) { %>
                    <li>
                        <a class="links block text-md font-medium leading-10 text-gray-900" href="/creator/events/<%=arrayOfIds[i] %>"><p style="display: inline;" class="events" value="<%=arrayOfIds[i] %>"><%= listOfEvents[i] %></p></a>
                        <% } %>
                    </li>
            </ul>
    
        </div>

<div>
<form method="POST" action="/creator">
    <div class="space-y-12">
            <h3 class="block text-md font-medium leading-10 text-gray-900 text-center">Add Event</h3>
            <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                <div class="sm:col-span-4">
                    <label for="name" class="block text-sm font-medium leading-6 text-gray-900">Name of Event</label>
                    <div class="mt-2">
                        <div
                            class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
                            <input type="text" name="name" id="name" autocomplete="eventName"
                                class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6"
                                placeholder="AfroNation" required>
                        </div>
                    </div>
                </div>
                    <div class="sm:col-span-4">
                        <label for="address" class="block text-sm font-medium leading-6 text-gray-900">Address</label>
                        <div class="mt-2">
                            <div
                                class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
                                <input type="text" name="address" id="eventName" autocomplete="address"
                                    class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6"
                                    placeholder="Garden of Eden" required>
                            </div>
                        </div>
                        
                <div class="sm:col-span-4">
                    <label for="ticketsAvailable" class="block text-sm font-medium leading-6 text-gray-900">Tickets Available</label>
                    <div class="mt-2">
                        <div
                            class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
                            <input type="number" name="ticketsAvailable" id="ticketsAvailable" max="3000"
                                class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6"
                                placeholder="3000" required>
                        </div>
                    </div>
            </div>
        </div>
    </div>

    <div class="mt-6 flex items-center justify-end gap-x-6">
        <button type="submit"
            class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
    </div>
</form>
</div>

<style>
    .links{
        color: blue;
    }
</style>

